{
  "private": true,
  "type": "module",
  "name": "@networklayer/monorepo",
  "version": "0.0.2",
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@epreston/prettier-config",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "start": "vite --open",
    "lint": "eslint --report-unused-disable-directives .",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-coverage": "vitest run --coverage",
    "format": "prettier --check --cache \"**/*.?(c|m)[tj]s?(x)\"",
    "format-fix": "prettier --write --cache \"**/*.?(c|m)[tj]s?(x)\""
  },
  "devDependencies": {
    "@epreston/eslint-config": "^2.0.0",
    "@epreston/prettier-config": "^2.0.0",
    "@epreston/tsconfig": "^1.2.0",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^2.0.3",
    "eslint": "^9.6.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.3",
    "vite": "^5.3.3",
    "vitest": "^2.0.1"
  },
  "engines": {
    "node": "^18.20.3 || ^20.15.0 || >=22.4.0"
  }
}
